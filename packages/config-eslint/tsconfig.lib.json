{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "../../dist/eslint-config/.tsbuildinfo",
    "types": ["node"],
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "../../dist/out-tsc",
    "removeComments": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": ["vite.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
